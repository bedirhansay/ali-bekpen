rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Auth check helper
    function isAuthenticated() {
      return request.auth != null;
    }

    // Exchange Rates: Read only for users (Writes by /Functions only)
    match /exchangeRates/{id} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Universal Rule: Allow authenticated users read/write access to all other collections
    // This covers categories, vehicles, transactions and any other current/future collection.
    match /{collection}/{id} {
      allow read, write: if isAuthenticated() && collection != 'exchangeRates';
    }
  }
}
